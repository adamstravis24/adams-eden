#!/usr/bin/env bash
set -euo pipefail

echo "[pre-install] (no-ext) Ensuring clean, writable working directory..."

chmod -R u+rwX . || true

if [ -L node_modules ] || [ -f node_modules ] || [ -d node_modules ]; then
  echo "[pre-install] (no-ext) Removing existing node_modules (if any)"
  rm -rf node_modules || true
fi

mkdir -p node_modules
chmod -R u+rwX node_modules || true

echo "[pre-install] (no-ext) Done."
