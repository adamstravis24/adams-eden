# Copy this file to `.env` and fill in your secrets locally. Do NOT commit your actual `.env`.
# These are public at build-time in Expo, but keep the raw values out of Git repos.

# Perenual API Key (required for Plant Database)
EXPO_PUBLIC_PERENUAL_API_KEY=

# Optional: Proxy URL for web CORS (dev only), e.g., http://192.168.1.10:3333
EXPO_PUBLIC_PERENUAL_PROXY_URL=

# Plant.id API Key (used by Identify feature)
EXPO_PUBLIC_PLANT_ID_API_KEY=

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Shopify Storefront API
EXPO_PUBLIC_SHOPIFY_STORE_DOMAIN=your_store.myshopify.com
EXPO_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token

# Stripe Configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Website URL for checkout redirect
EXPO_PUBLIC_WEBSITE_URL=https://adamseden.com

# Plant Database API
EXPO_PUBLIC_PLANT_ID_API_KEY=your_plant_id_api_key

# NOAA Climate API
EXPO_PUBLIC_NOAA_TOKEN=your_noaa_token

# Expo Configuration
EXPO_NO_UPDATES=1


# Google OAuth (optional while disabled)
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=
EXPO_PUBLIC_GOOGLE_EXPO_CLIENT_ID=
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=

# Feature flags
# Keep Google Sign-In hidden unless explicitly enabled
EXPO_PUBLIC_GOOGLE_SIGNIN_ENABLED=false
