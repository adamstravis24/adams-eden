# Copy this file to `.env` and fill in your secrets locally. Do NOT commit your actual `.env`.
# These are public at build-time in Expo, but keep the raw values out of Git repos.

# Perenual API Key (required for Plant Database)
EXPO_PUBLIC_PERENUAL_API_KEY=

# Optional: Proxy URL for web CORS (dev only), e.g., http://192.168.1.10:3333
EXPO_PUBLIC_PERENUAL_PROXY_URL=

# Plant.id API Key (used by Identify feature)
EXPO_PUBLIC_PLANT_ID_API_KEY=

# Firebase (required)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=

# Google OAuth (optional while disabled)
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=
EXPO_PUBLIC_GOOGLE_EXPO_CLIENT_ID=
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=

# Feature flags
# Keep Google Sign-In hidden unless explicitly enabled
EXPO_PUBLIC_GOOGLE_SIGNIN_ENABLED=false
